@using Microsoft.AspNetCore.Components.Routing
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthState

<nav class="cio-nav@(isOpen ? " open" : string.Empty)">
 <div class="cio-nav__brand">
 <a href="/" class="cio-logo">Cursed into Oblivion</a>
 </div>
 <button class="cio-nav__toggle" title="Toggle navigation" @onclick="Toggle">?</button>
 <ul class="cio-nav__links">
 <li><NavLink href="/" Match="NavLinkMatch.All">Home</NavLink></li>
 <li><NavLink href="/gigs">Gigs</NavLink></li>
 <li><NavLink href="/merch">Merch</NavLink></li>
 <AuthorizeView Roles="BandMember">
 <Authorized>
 <li><NavLink href="/members/dashboard">Dashboard</NavLink></li>
 <li><NavLink href="/members/calendar">Calendar</NavLink></li>
 </Authorized>
 <NotAuthorized>
 <li><NavLink href="/account/login">Login</NavLink></li>
 </NotAuthorized>
 </AuthorizeView>
 </ul>
</nav>

@code {
 private bool isOpen;
 private void Toggle() => isOpen = !isOpen;
}
